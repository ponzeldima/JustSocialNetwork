<script>
    @{ string authorize = "false";
        if (!(User.Identity.Name is null))
        {
            authorize = "true";
        }
    }
    if (@authorize) {
        $.ajax({
            type: "GET",
            url: "/Users/GetUserIdentifiers/",
            dataType: "json",
            success: function (data) {
                $("#nav_avatar").attr("src", data.image);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(xhr.status);
                alert(thrownError);
            }
        });
    }
    else {
        $("#nav_avatar").attr("src", "https://klike.net/uploads/posts/2019-03/1551511862_28.jpg");
    }
</script>
